<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4AA56C38"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/pngwing_com"
                android:contentDescription="@string/todoo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="30sp"
                android:fontFamily="@font/product_sans_bold"
                android:text="@string/clasificaci_n" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="@string/en_esta_secci_n_podr_s_seleccionar_el_tipo_de_material_que_vas_a_desechar_para_poder_indicarte_el_avance_alcanzado" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:columnCount="2"
                    app:rowCount="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="15dp"
                        app:cardBackgroundColor="#D38C6745"
                        app:cardCornerRadius="12dp">

                        <Button
                            android:id="@+id/buttonPlastico"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/ecorecicla"
                            tools:ignore="DuplicateSpeakableTextCheck,VisualLintOverlap" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/imagePlatico"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:contentDescription="@string/tod6"
                                android:src="@drawable/reciclaje_removebg_preview"
                                tools:ignore="ImageContrastCheck"
                                tools:srcCompat="@drawable/residuos_plasticos_ok_removebg_preview" />

                            <TextView
                                android:id="@+id/textPlastico"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pl_stico1"
                                android:textColor="#263238"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="15dp"
                        app:cardBackgroundColor="#D38C6745"
                        app:cardCornerRadius="12dp">

                        <Button
                            android:id="@+id/buttonPapel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/ecorecicla"
                            android:background="@android:color/transparent"
                            tools:ignore="VisualLintOverlap" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/imagePapel"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:contentDescription="@string/tod5"
                                android:src="@drawable/_57254812_papel_cart_n_residuos_usados_de_dibujos_animados_con_un_cartel_de_reciclaje_removebg_preview"
                                tools:ignore="ImageContrastCheck" />

                            <TextView
                                android:id="@+id/textPapel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/papel1"
                                android:textColor="#263238"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="15dp"
                        app:cardBackgroundColor="#D38C6745"
                        app:cardCornerRadius="12dp"
                        tools:ignore="TextSizeCheck">

                        <Button
                            android:id="@+id/buttonDesechosToxicos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/ecorecicla"
                            tools:ignore="VisualLintOverlap" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/imageDesechosToxicos"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:contentDescription="@string/tod3"
                                android:src="@drawable/images_removebg_preview__1_"
                                tools:ignore="ImageContrastCheck" />

                            <TextView
                                android:id="@+id/textDesechosToxicos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/desechos_t_xicos2"
                                android:textColor="#263238"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="15dp"
                        app:cardBackgroundColor="#D38C6745"
                        app:cardCornerRadius="12dp">

                        <Button
                            android:id="@+id/buttonLiquidos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/ecorecicla"
                            android:background="@android:color/transparent"
                            tools:ignore="VisualLintOverlap" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/imageLiquidos"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/png_transparent_barrel_of_toxic_waste_removebg_preview"
                                android:contentDescription="@string/tod4" />

                            <TextView
                                android:id="@+id/textLiquidos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/l_quidos1"
                                android:textColor="#263238"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </androidx.gridlayout.widget.GridLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/buttonRegreso"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#D38C6745"
                    app:icon="?attr/actionModeCloseDrawable"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>